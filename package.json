{
  "name": "zero-runtime",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:app": "turbo build:app",
    "build:nextjs": "turbo build && turbo --scope=@app/next-app build:app",
    "clean": "turbo clean",
    "lint": "eslint . --cache --report-unused-disable-directives --ext .js,.ts,.tsx --max-warnings 0",
    "format": "prettier --check .",
    "prepare": "husky install",
    "preview": "turbo preview",
    "start": "turbo start",
    "start:next": "turbo --scope=@app/next-app start",
    "typecheck": "turbo typecheck",
    "watch": "turbo watch"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-next": "^14.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "3.0.3",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "turbo": "^1.10.16",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": "^8.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "eslint-config-prettier": "^9.0.0"
  }
}
