{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["types", "^build"],
      "outputs": ["dist/**", "esm/**", "lib/**", "types/**"]
    },
    "build:app": {
      "dependsOn": ["build", "types"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["types"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^start"]
    },
    "preview": {
      "dependsOn": ["build:app"]
    },
    "types": {
      "dependsOn": ["^types"],
      "outputs": ["types/**", "dist/**"]
    },
    "typecheck": {
      "cache": false
    }
  }
}
